
@{
    ViewBag.Title = "PanelCEL";
    Layout = "~/Views/Shared/MasterPageAmplio.cshtml";
}




<script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<link href="~/Scripts/css/estilosTabs.css" rel="stylesheet" />
<script src="~/Scripts/js/jsTabs.js"></script>
<script type="text/javascript">
     $(document).ready(
        function () {
            $("#msjExito").hide();
        }
);
</script>

<center>
    <h2>PanelCEL</h2>

    <p>Seleccione la accion a realizar</p>


    <div class="tab">
        <button class="tablinks" onclick="openCity(event, 'Centros')">Ver notas</button>
        <button class="tablinks" onclick="openCity(event, 'Programas')">Unirse a programa de estudios</button>
        <button class="tablinks" onclick="openCity(event, 'Usuarios')">Seleccionar familia</button>
        <button class="tablinks" onclick="openCity(event, 'Productos')">Productos</button>
        <button class="tablinks" onclick="openCity(event, 'Ventas')">Ventas</button>
    </div>
</center>
<!-- Tab content -->
<div class="alert alert-success" id="msjExito">
    Usuario eliminado con exito
</div>
<div id="Programas" class="tabcontent">
    <h3>Usuarios</h3>
    <a href="@Url.Action("ProgramasEstudio", "Home")">
        Haga click aqui si desea buscar programas para unirse
    </a>
    <table id="TProgramas" style="width:100%">
        <thead>
            <tr>
                <th>Nombre del programa</th>
                <th>Estado Postulacion</th>
                <th>Fecha de postulacion</th>
            </tr>
        </thead>
        @{
            Negocio.OperacionesProgramasEstudios oprog = new Negocio.OperacionesProgramasEstudios();
            List<Negocio.ProgramaEstudios> lista = oprog.TraerTodo();
            foreach (Negocio.ProgramaEstudios prog in lista) {
                if (prog.IDCENTRO==new Negocio.OperacionesUsuarios().Traer(int.Parse(Session["idUsuario"].ToString())).IdCarrera  ) {
                     <tr>
                         <th>Nombre del programa</th>
                         <th>Estado Postulacion</th>
                         <th>Fecha de postulacion</th>
                     </tr>
                    }
                }
            }

    </table>
</div>