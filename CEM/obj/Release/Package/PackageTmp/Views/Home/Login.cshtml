
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

<script type="text/javascript">
    $(document).ready(
        function () {
            $("#msj").hide();
            $("#btnLogin").click(
                function () {
                    $.ajax({
                        url: '@Url.Action("IngresoCredenciales", "Home")',
                        type: 'POST',
                        data: $("#formulario").serialize(),
                        success: function (result) {
                            if (result === 'true1') {
                                window.location.href = "/user/panelAdmin";
                            }
                            else if (result==='true2') {
                                window.location.href = "/user/panelAlumno";
                            }
                            else if (result === 'true3') {
                                window.location.href = "/user/panelCEM";
                            }
                            else if (result === 'true4') {
                                window.location.href = "/user/panelCEL";
                            }
                            else if (result === 'true5') {
                                window.location.href = "/user/panelFamilia";
                            }
                            else {
                                $("#msj").show(2000).delay(2000).fadeOut(2000);
                            }
                        }
                    }
                    );
                }

            );
        }
);
</script>

<form id="formulario">
    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Nombre de usuario:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="username" name="username" placeholder="Ingrese su nombre de usuario">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Password:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su password">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <center>
                <input type="button" value="Ingresar" id="btnLogin" class="btn btn-primary" />
            </center>
        </div>
    </div>
</form>
<div id="msj" class="alert alert-danger">
    Credenciales no validas
</div>

<a href="@Url.Action("Registro","Home")">¿No estas registrado?</a>